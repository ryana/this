  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "this"
    gemspec.summary = "Add Object#this to stuff for private writers"
    gemspec.email = "ryan@angilly.com"
    gemspec.homepage = "http://github.com/ryana/this"
